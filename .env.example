# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL Connection
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
#
# Servidor: Store
# Base de Datos: store
#
# Para crear el usuario y la base de datos en el servidor Store:
#   psql -h Store -U postgres
#   CREATE DATABASE store;
#   GRANT ALL PRIVILEGES ON DATABASE store TO <tu_usuario>;
#   \q

DATABASE_URL="postgresql://<usuario>:<password>@Store:5432/store?schema=public"

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=3000
NODE_ENV=development

# ========================================
# APPLICATION CONFIGURATION
# ========================================
NODE_ENV="development"
PORT=3000
